<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smart_login_suc_bg2"
    tools:context="com.android.blue.smarthomefunc.fragment.DeviceControlFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/add_device_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_image_background"
            android:gravity="center"
            android:text="@string/add_device"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/device_recycle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1" />
    </LinearLayout>


</FrameLayout>
