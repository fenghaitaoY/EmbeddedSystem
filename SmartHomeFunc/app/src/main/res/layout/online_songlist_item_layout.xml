<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/song_list_item_cover"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_cover" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/song_list_item_billboard_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/null_music"
                android:textSize="20sp"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/song_list_item_music1_count"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/online_songlist_red_circle_bg"
                    android:gravity="center"
                    android:paddingRight="1dp"
                    android:paddingBottom="1dp"
                    android:text="1"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/song_list_item_music1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/online_loading" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/song_list_item_music2_count"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/online_songlist_green_circle_bg"
                    android:gravity="center"
                    android:paddingRight="1dp"
                    android:paddingBottom="1dp"
                    android:text="2"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/song_list_item_music2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/online_loading" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/song_list_item_music3_count"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/online_songlist_orange_circle_bg"
                    android:gravity="center"
                    android:paddingRight="1dp"
                    android:paddingBottom="1dp"
                    android:text="3"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/song_list_item_music3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/online_loading" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/song_list_item_divider"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="120dp"
        android:background="?android:attr/listDivider" />
</FrameLayout>